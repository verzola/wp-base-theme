{
  "private": true,
  "name": "wp-base-theme",
  "version": "0.0.1",
  "scripts": {
    "format": "prettier --write \"**/*.{js,json,scss,html,md}\"",
    "lint": "npm run -s lint:js && npm run -s lint:scss",
    "lint:js": "eslint src/js/**/*.js",
    "lint:scss": "stylelint \"src/scss/**/*.scss\"",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules --env.production",
    "start": "cross-env NODE_ENV=development webpack --watch --progress --hide-modules --env.development",
    "test": "npm run -s lint"
  },
  "author": "Gustavo Verzola <verzola@gmail.com>",
  "devDependencies": {
    "@verzola/bass": "^0.0.13",
    "hamburgers": "^1.1.3",
    "normalize.css": "^8.0.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,scss,html,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 version",
    "IE 10"
  ]
}
